{% extends "base/base.twig" %}

{% block header %}
    {% include "base/smallheader.twig" %}
{% endblock %}

{% block content %}
<div class="row my-2">
    <div class="col-12">
        <h3>Editar queja</h3>
    </div>
</div>

<div class="row">
    <div class="col-10">
        {{ message }}
        <form method="POST" action="{{ URL }}events/editevent" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-8">
                <label for="edit-title">Título</label>
                <input type="text" class="form-control" name="edit-title" placeholder="Título" required value="{{ event.title }}">
                </div>
                <div class="form-group col-md-4">
                <label for="edit-place">Lugar</label>
                <input type="text" class="form-control" name="edit-place" placeholder="Lugar" required value="{{ event.place }}">
                </div>
            </div>
            <div class="form-group">
                <label for="edit-description">Descripción</label>
                <textarea class="form-control" name="edit-description" placeholder="Descripción..." rows="10" required>{{ event.description }}</textarea>
            </div>
            <div class="form-group">
                <label for="edit-keywords">Palabras clave (separadas por comas)</label>
                <input type="text" class="form-control" name="edit-keywords" placeholder="Palabras clave (opcional)" value="{{ event.keywords }}">
            </div>

            <div class="form-group">
                <label for="edit-images">Selecciona alguna imagen (opcional)</label>
                <input type="file" name="edit-images[]" class="file" multiple>
            </div>
            
            <input type="number" name="edit-id" hidden value={{ event.id }}>
            <input type="email" name="edit-email" hidden value={{ event.email }}>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </form>
    </div>

    <div class="col-2">
        {% include "base/sideprofile.twig" %}
    </div>
</div>
{% endblock %}